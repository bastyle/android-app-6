<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="16dp"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/apartment_1"
                app:layout_constraintLeft_toRightOf="@id/description" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#4ba8cb"
                tools:text="Adress" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:paddingBottom="10dp"
                android:textSize="12dp"
                android:textStyle="bold"
                tools:text="Place Holder Text"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:ellipsize="none"
                app:layout_constraintRight_toLeftOf="@id/main_image"
                tools:text="Art Shoppe Condos, Ne Corner View. 2 Bed, 2 Bath, 2 Balconies." />



            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="$10.000" />

            <CheckBox
                android:id="@+id/appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:paddingLeft="0dp"
                android:textStyle="normal"
                android:textSize="11dp"
                android:text="Book Showing"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>








</androidx.cardview.widget.CardView>