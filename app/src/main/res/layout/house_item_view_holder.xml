<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    android:elevation="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <TableLayout
            android:id="@+id/table_layout_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="parent">

            <TableRow>

            </TableRow>

            <TableRow>
                <ImageView
                    android:id="@+id/main_image"
                    android:layout_width="200dp"
                    android:layout_height="140dp"
                    android:src="@drawable/apartment_1"
                    app:layout_constraintLeft_toRightOf="@id/description" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:ellipsize="none"
                    app:layout_constraintRight_toLeftOf="@id/main_image"
                    tools:text="Art Shoppe Condos, Ne Corner View. 2 Bed, 2 Bath, 2 Balconies." />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Place Holder Text" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="$" />

                <!--<View android:layout_weight="1" />-->

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Place Holder Text"
                    android:layout_weight="2"/>
            </TableRow>
        </TableLayout>






</androidx.cardview.widget.CardView>